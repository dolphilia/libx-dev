import docsConfig from '../config/docs.config'; // docsConfigã‚’ã‚¤ãƒ³ãƒãƒ¼ãƒˆ

// å®šæ•°å®šç¾©
// BASE_URL å®šç¾©ã¯å‰Šé™¤ã—ã€docsConfig.baseUrl ã‚’ä½¿ç”¨ã™ã‚‹
const LANG_NAMES: Record<string, string> = {
