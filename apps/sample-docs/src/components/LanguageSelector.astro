  }

  .language-info-label {
    font-weight: 500;
    color: var(--sl-color-gray-6, #4b5563);
  }

  .language-info-value {
    color: var(--sl-color-gray-8, #1f2937);
  }

  /* ãƒ€ãƒ¼ã‚¯ãƒ¢ãƒ¼ãƒ‰å¯¾å¿œ */
  :global(.dark) .language-dropdown-header,
